<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <RelativeLayout android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_weight="1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView android:id="@+id/playing_art"
      android:src="@drawable/album"
      android:scaleType="fitCenter"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent" />
    <ProgressBar android:id="@+id/downloading"
      android:visibility="gone"
      android:layout_centerInParent="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </RelativeLayout>
  <TextView android:id="@+id/playing_title"
    android:textSize="20sp"
    android:textColor="#fff"
    android:singleLine="true"
    android:ellipsize="marquee"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
  <TextView android:id="@+id/playing_artist"
    android:singleLine="true"
    android:ellipsize="end"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
  <TextView android:id="@+id/playing_album"
    android:singleLine="true"
    android:ellipsize="end"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
  <ProgressBar android:id="@+id/seek"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
  <LinearLayout android:orientation="horizontal"
    android:paddingLeft="15sp"
    android:paddingRight="15sp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView android:id="@+id/seek_current"
      android:textSize="8sp"
      android:layout_weight="1"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" />
    <TextView android:id="@+id/seek_total"
      android:textSize="8sp"
      android:gravity="right"
      android:layout_weight="1"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" />
  </LinearLayout>
</LinearLayout>
