<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <ImageView android:id="@+id/song_art"
    android:src="@drawable/album"
    android:scaleType="centerInside"
    android:layout_width="100dp"
    android:layout_height="fill_parent" />
  <LinearLayout android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView android:id="@+id/song_title"
      android:text="They May Pass"
      android:textSize="20sp"
      android:textColor="#fff"
      android:gravity="center"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" />
    <TextView android:id="@+id/song_artist"
      android:text="Nobuo Uematsu"
      android:gravity="center"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" />
    <TextView android:id="@+id/song_album"
      android:text="Final Fantasy X: Original Soundtrack"
      android:gravity="center"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" />
  </LinearLayout>
</LinearLayout>
